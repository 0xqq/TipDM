package com.tipdm.framework.multitenancy;

import com.tipdm.framework.dmserver.utils.Constants;

/**
 * Created by zhoulong on 2017/11/11.
 */
public class TenantContext {

    private static ThreadLocal<String> currentTenant = new ThreadLocal<>();

    public static String getCurrentTenant() {
        String tenant = currentTenant.get();
        if(tenant == null){
            tenant = Constants.DEFAULT_TENANTID;
        }
        return tenant;
    }

    public static void setCurrentTenant(String tenant) {
        currentTenant.set(tenant);
    }

    public static void reset() {
        currentTenant.set(Constants.DEFAULT_TENANTID);
    }

}
